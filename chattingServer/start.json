{
    "apps": [
      {
        "name": "Mine_Chat_Server",            
        "script": "chat_server.js",             
        "instances": 1,
        "exec_mode": "fork",
        "watch": true,
        "ignore_watch": ["logs"],  // logs 폴더 변경 감지 무시
        "merge_logs": true,
        "log_file": "logs/combined.log",
        "out_file": "logs/out.log",
        "error_file": "logs/error.log",
        "env": {
          "NODE_ENV": "dev"      
        },
        "env_production": {
          "NODE_ENV": "production"
        }
      }
    ]
  }